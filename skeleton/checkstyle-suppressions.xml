<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
    "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
    "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>
    <!-- Suppress checks for generated code -->
    <suppress checks=".*" files=".*[\\/]generated[\\/].*"/>

    <!-- Suppress checks for test files -->
    <suppress checks="JavadocMethod" files=".*Test\.java$"/>
    <suppress checks="JavadocType" files=".*Test\.java$"/>
    <suppress checks="MissingJavadocType" files=".*Test\.java$"/>
    <suppress checks="MagicNumber" files=".*Test\.java$"/>

    <!-- Suppress for DTOs and Records -->
    <suppress checks="JavadocMethod" files=".*Dto\.java$"/>
    <suppress checks="JavadocMethod" files=".*Request\.java$"/>
    <suppress checks="JavadocMethod" files=".*Response\.java$"/>

    <!-- Suppress line length for imports -->
    <suppress checks="LineLength" files=".*\.java$" lines="1-50"/>
</suppressions>
