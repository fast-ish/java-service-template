# =============================================================================
# Environment Variables for ${{values.name}}
# =============================================================================
# Copy this file to .env and fill in the values
# Never commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
SPRING_PROFILES_ACTIVE=local
SERVER_PORT=8080
MANAGEMENT_PORT=8081
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Datadog (optional for local development)
# -----------------------------------------------------------------------------
DD_AGENT_HOST=localhost
DD_TRACE_ENABLED=false
DD_ENV=local

{%- if values.database == "aurora-postgresql" %}
# -----------------------------------------------------------------------------
# PostgreSQL Database
# -----------------------------------------------------------------------------
DATABASE_URL=jdbc:postgresql://localhost:5432/${{values.name}}
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DB_POOL_SIZE=5
{%- endif %}

{%- if values.database == "aurora-mysql" %}
# -----------------------------------------------------------------------------
# MySQL Database
# -----------------------------------------------------------------------------
DATABASE_URL=jdbc:mysql://localhost:3306/${{values.name}}
DATABASE_USERNAME=root
DATABASE_PASSWORD=mysql
DB_POOL_SIZE=5
{%- endif %}

{%- if values.cache == "elasticache-redis" %}
# -----------------------------------------------------------------------------
# Redis Cache
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_SSL=false
{%- endif %}

{%- if values.messaging == "sqs" or values.messaging == "sns-sqs" %}
# -----------------------------------------------------------------------------
# AWS (for LocalStack in development)
# -----------------------------------------------------------------------------
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_ENDPOINT_URL=http://localhost:4566
{%- endif %}

{%- if values.aiClient == "openai" or (values.aiClient == "spring-ai" and values.aiProvider == "openai") or (values.aiClient == "langchain4j" and values.aiProvider == "openai") %}
# -----------------------------------------------------------------------------
# OpenAI
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-4o
{%- endif %}

{%- if values.aiClient == "anthropic" or (values.aiClient == "spring-ai" and values.aiProvider == "anthropic") or (values.aiClient == "langchain4j" and values.aiProvider == "anthropic") %}
# -----------------------------------------------------------------------------
# Anthropic
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-your-key-here
ANTHROPIC_MODEL=claude-sonnet-4-20250514
{%- endif %}

{%- if values.aiClient == "bedrock" or (values.aiClient == "spring-ai" and values.aiProvider == "bedrock") or (values.aiClient == "langchain4j" and values.aiProvider == "bedrock") %}
# -----------------------------------------------------------------------------
# AWS Bedrock
# -----------------------------------------------------------------------------
AWS_REGION=us-east-1
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
{%- endif %}

{%- if values.featureFlags %}
# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
TOGGLZ_CONSOLE_ENABLED=true
{%- endif %}

# -----------------------------------------------------------------------------
# Enterprise Features (optional)
# -----------------------------------------------------------------------------
MULTITENANCY_ENABLED=false
REQUEST_SIGNING_ENABLED=false
# REQUEST_SIGNING_SECRET=your-shared-secret-here
